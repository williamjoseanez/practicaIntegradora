<div id="product-container">
  {{#each products}}
    <div class="card">
      <img src="{{this.thumbnail}}" class="card-img-top" alt="{{this.title}}" />
      <p>Title: {{this.title}}</p>
      <p>Description: {{this.description}}</p>
      <p>Price: $ {{this.price}}</p>
      <p>Category: {{this.category}}</p>
      <p>Id: {{this._id}}</p>
          {{!-- <form  action="/productsdetail/{{this._id}}" method="GET">
                   <button  type="submit">Detalles del Producto</button>
          </form>
          <form  action="/api/carts/{{../cartId}}/products/{{_id}}" method="POST">
                   <button  type="submit">Agregar al Carrito</button>
          </form> --}}
        <div class="contenedor-boton">
            {{#if this.cart}}
                <button class="boton-producto" type="submit" id="btnSend" value="carts/{{this.cart}}/product/{{this._id}}">Agregar al Carrito</button>
            {{else}}
                <button class="boton-producto" type="submit" onclick="agregarAlerta('No puedes porque eres admin')">Agregar al Carrito</button>
            {{/if}}
        </div>
   </div>
  {{/each}}
</div>


